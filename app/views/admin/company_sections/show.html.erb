<div class="container">
  <div class="page-header">
    <h1><%=h @company_section.full_name %></h1>
  </div>
  <p>
    <b>E-Mail</b><br />
    <%=h @company_section.email %>
  </p>

  <p>
    <b>Telefon</b><br />
    <%=h @company_section.phone %>
  </p>

  <p>
    <b>Fax</b><br />
    <%=h @company_section.fax %>
  </p>

  <p>
    <b>Absender-Block für Briefe</b><br />
  <pre><%=h @company_section.sender_address_block %></pre>
</p>

<h2>Benutzer</h2>

<ul>
  <% @company_section.users.each do |user| %>
    <li><%= link_to h(user.full_name), [:admin, user] %></li>
  <% end %>
</ul>

<p class="bottom-actions">
  <%= link_to 'Bearbeiten', edit_admin_company_section_path(@company_section), :class => 'edit' %>
  <%= link_to 'Zurück zur Übersicht', admin_company_sections_path, :class => 'back' %>
</p>

</div>