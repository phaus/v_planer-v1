<div class="container">
  <div class="page-header">
    <h1>Sektion bearbeiten</h1>
  </div>
  <%= error_messages_for :company_section %>

  <% form_for([:admin, @company_section]) do |f| %>

    <p>
      <%= f.label :name, 'Name' %><br />
      <%= f.text_field :name %>
    </p>

    <%= render :partial => 'form', :locals => {:f => f} %>

    <p>
      <%= f.submit 'Speichern', :class => 'btn btn-primary' %>
      <%= link_to 'Abbrechen', [:admin, @company_section], :class => 'btn' %>
      <%= link_to 'Zurück zur Übersicht', admin_company_sections_path, :class => 'btn' %>
    </p>
  <% end %>
</div>