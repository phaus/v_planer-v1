<div class="container">
  <div class="page-header">
    <h1>Benutzer</h1>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Benutzername</th>
        <th>Firma/Sektion</th>
      </tr>

      <% @users.each do |user| %>
        <tr class="<%= cycle 'odd', 'even' %>">
          <td><%=h user.full_name %></td>
          <td><%=h user.login %></td>
          <td><%= link_to user.company_section.name, [:admin, user.company_section] rescue 'n/a' %></td>
          <td>
           <div class="btn-group">
              <%= link_to image_tag('icons_16/edit.png'), edit_admin_user_path(user), :class => 'btn' %>
              <%= link_to image_tag('icons_16/editdelete.png'), [:admin, user], :confirm => 'Sind wir uns da GANZ sicher?', :method => :delete, :class => 'btn' %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
