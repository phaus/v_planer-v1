<h1>Benutzer</h1>

<table class="data">
  <tr>
    <th>Name</th>
    <th>Benutzername</th>
    <th>Firma/Sektion</th>
  </tr>

  <% @users.each do |user| %>
    <tr class="<%= cycle 'odd', 'even' %>">
      <td><%=h user.full_name %></td>
      <td><%=h user.login %></td>
      <td><%=h user.company_section.full_name rescue 'n/a' %></td>
      <td>
        <ul class="toolchain">
          <li><%= link_to image_tag('icons_16/edit.png'), edit_admin_user_path(user) %></li>
          <li><%= link_to image_tag('icons_16/editdelete.png'), [:admin, user], :confirm => 'Sind wir uns da GANZ sicher?', :method => :delete %></li>
        </ul>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Neuer Benutzer', new_admin_user_path %></p>
