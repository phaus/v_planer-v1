<div class="container">
  <div class="page-header">
    <h1>Neue Firma</h1>
  </div>
  <%= form_for([:admin, @company]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name, 'Firmenname' %><br />
      <%= f.text_field :name %>
    </p>

    <% f.fields_for :main_section do |msf| %>
      <%= render :partial => 'admin/company_sections/form', :locals => {:f => msf} %>
    <% end %>

    <fieldset>
      <legend>Administrativer Benutzer</legend>
      <p>Der administrative Benutzer ist derjenige Benutzer, der die Angaben zur Firma bearbeiten kann und gegenÃ¼ber dem
        Betreiber der Plattform als Firmenkontakt und Verantwortlicher auftritt.</p>
      <% f.fields_for :admin do |af| %>
        <%= render :partial => 'admin/users/form', :locals => {:f => af} %>
      <% end %>
    </fieldset>

    <p>
      <%= f.submit 'Speichern', :class => 'btn btn-primary' %>
      <%= link_to 'Abbrechen', admin_companies_path, :class => 'btn' %>
    </p>
  <% end %>
</div>