<h1>Willkommen zum v_Planer.</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Login</legend>

    <p><%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>

    <p><%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>

    <p><%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Automatisch einloggen beim nächsten Besuch' %></p>

    <p>
      <%= f.submit 'Login' %>
    </p>
  </fieldset>
<% end %>

