<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Bezeichnung</th>
      <th>Anzahl</th>
      <th>Einzelpreis</th>
      <th>Netto-Gesamt</th>
    </tr>
  </thead>

  <tbody>
    <% commercial_process.items.each_with_index do |item, index| %>
      <tr>
        <td class="decimal"><%= index + 1 %> </td>
        <td><%= item.name %></td>
        <td class="decimal"><%= np item.quantity, 2, item.unit %></td>
        <%= render item.cost_calculation %>
        <td><%= link_to 'bearbeiten', edit_commercial_process_process_item_path(@commercial_process, item) %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="4">Summe</th>
      <td class="decimal"><%= np commercial_process.sum, 2, '€' %></td>
    </tr>
    <tr>
      <th colspan="4">Rabatt</th>
      <td class="decimal"><%= np commercial_process.discount, 2, '€' %></td>
    </tr>
    <tr>
      <th colspan="4">Kunden-Rabatt</th>
      <td class="decimal"><%= np commercial_process.client_discount, 2, '€' %></td>
    </tr>
    <tr>
      <th colspan="4">Netto-Gesamt</th>
      <td class="decimal"><%= np commercial_process.total_net_price, 2, '€' %></td>
    </tr>
    <tr>
      <th colspan="4">MWST</th>
      <td class="decimal"><%= np commercial_process.vat, 2, '€' %></td>
    </tr>
    <tr>
      <th colspan="4">Brutto-Gesamt</th>
      <td class="decimal"><%= np commercial_process.total_gross_price, 2, '€' %></td>
    </tr>
  </tfoot>
</table>
