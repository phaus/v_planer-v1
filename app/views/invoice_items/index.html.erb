<h1>Listing invoice_items</h1>

<table>
  <tr>
    <th>Process item</th>
    <th>Process item type</th>
    <th>Invoice</th>
    <th>Price</th>
    <th>Remarks</th>
  </tr>

<% @invoice_items.each do |invoice_item| %>
  <tr>
    <td><%=h invoice_item.process_item_id %></td>
    <td><%=h invoice_item.process_item_type %></td>
    <td><%=h invoice_item.invoice_id %></td>
    <td><%=h invoice_item.price %></td>
    <td><%=h invoice_item.remarks %></td>
    <td><%= link_to 'Show', invoice_item %></td>
    <td><%= link_to 'Edit', edit_invoice_item_path(invoice_item) %></td>
    <td><%= link_to 'Destroy', invoice_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

