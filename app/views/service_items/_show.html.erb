<h2>Dienstleistungen</h2>

<table class="data" style="width: 100%">
  <thead>
    <tr>
      <th>Anz.</th>
      <th colspan="2">Artikel/Anmerkungen</th>
      <th>Stundensatz</th>
      <th>Einsatzdauer</th>
      <th>Gesamt</th>
    </tr>
  </thead>
  <tbody>
    <% @process.service_items.each do |item| %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td class="decimal">
          <%= item.count %> x
        </td>
        <td colspan="2">
          <%= link_to item.product.full_name, item.product %><br />
          <em><%=h item.comments %></em>
        </td>
        <td class="money">
          <%= m item.unit_price %>/<%= item.product.unit %>
        </td>
        <td class="decimal">
          <%= item.duration %>&thinsp;<%= item.product.unit %>
        </td>
        <td class="money">
          <%= m item.price %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="4">Zwischensumme Dienstleistungen</th>
      <td></td>
      <td class="money"><%= m @process.service_sum %></td>
    </tr>
  </tfoot>
</table>
