<%= form_for(@category) do |f| %>
  <%= f.wrapped_text_field :name %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :size => '75x5' %>
  </div>

  <%= f.wrapped_collection_select :product_ids, current_company.products, :id, :full_name, {}, :multiple => true  %>

  <div class="field">
    <%= f.submit 'Speichern' %>
  </div>
<% end %>
