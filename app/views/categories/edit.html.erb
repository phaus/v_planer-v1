<h1>Kategorie bearbeiten</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Beschreibung</b><br />
    <%= f.text_area :description, :size => '75x5' %>
  </p>

  <p>
    <b>Artikel</b><br />
    <%= f.collection_select :product_ids, current_company.products.all, :id, :full_name, {}, :multiple => true  %>
  </p>

  <p>
    <%= f.submit 'Speichern' %>
  </p>
<% end %>

<p class="bottom-actions">
  <%= link_to 'Zurück zur Ansicht', @category, :class => 'back' %>
  <%= link_to 'Zurück zur Übersicht', categories_path, :class => 'back' %>
</p>
