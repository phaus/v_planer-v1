<h1>Mitarbeiter der Firma <%= current_company.name %></h1>

<table class="data">
  <tr>
    <th>Name</th>
    <th>Benutzername</th>
  </tr>

  <% @users.each do |user| %>
    <tr class="<%= cycle 'odd', 'even' %>">
      <td><%= link_to h(user.full_name), user %></td>
      <td><%=h user.login %></td>
      <td><%=h user.company_section.full_name rescue 'n/a' %></td>
      <td>
        <ul class="toolchain">
          <li><%= link_to image_tag('icons_16/goto.png'), user %></li>
          <li><%= link_to image_tag('icons_16/edit.png'), edit_user_path(user) %></li>
          <li><%= link_to image_tag('icons_16/editdelete.png'), user, :confirm => 'Sind wir uns da GANZ sicher?', :method => :delete %></li>
        </ul>
      </td>
    </tr>
  <% end %>
</table>

<p class="bottom-actions">
  <%= link_to 'Neuer Mitarbeiter', new_user_path, :class => 'new' %>
</p>
