<% if is_company_admin? %>
  <p><%= link_to_remote 'Firmendaten bearbeiten',
    :update => 'company_details',
    :url    => edit_company_path,
    :method => :get,
    :after  => "new Effect.BlindDown('company_details', {duration: 0.5})",
    :html   => {:href => edit_company_path}%>
  </p>
<% end %>
