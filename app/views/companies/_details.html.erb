<address>
  <strong><%=h @user.company.name %></strong><br />
  <%= link_to h(@user.company.admin.full_name), @user.company.admin %><br />
  <%=h @user.company.sender_address_block %><br />
  <abbr title="E-Mail">M:</abbr> <%=h @user.company.email || 'Nicht angegeben' %><br />
  <abbr title="Telefon">P:</abbr> <%=h @user.company.phone || 'Nicht angegeben' %><br />
  <abbr title="Telefax">F:</abbr> <%=h @user.company.fax || 'Nicht angegeben' %><br />
  Steuernummer: <strong><%=h @user.company.tax_id || 'Nicht angegeben' %></strong><br />
  USt-ID: <strong><%=h @user.company.vat_id || 'Nicht angegeben' %></strong><br />
</address>
