<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bank name</th>
    <th>Bank account</th>
    <th>Bank blz</th>
    <th>Admin</th>
    <th>Letter sender address block</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.bank_name %></td>
    <td><%=h company.bank_account %></td>
    <td><%=h company.bank_blz %></td>
    <td><%=h company.admin_id %></td>
    <td><%=h company.letter_sender_address_block %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New company', new_company_path %>